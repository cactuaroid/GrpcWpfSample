<Window x:Class="GrpcWpfSample.Client.Wpf.View.ChatClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrpcWpfSample.Client.Wpf"
        mc:Ignorable="d"
        Title="Chat Client"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="18" />
        </Grid.RowDefinitions>
        <ListBox x:Name="History"
                 Grid.Row="0"
                 ItemsSource="{Binding ChatHistory}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="NameInput"
                     Grid.Column="0"
                     Text="{Binding Name}" />
            <TextBox x:Name="BodyInput"
                     Grid.Column="1"
                     KeyDown="BodyInput_KeyDown"
                     Loaded="BodyInput_Loaded" />
        </Grid>
    </Grid>
</Window>
